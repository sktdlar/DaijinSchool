<UserControl x:Class="DaijinSchool.UserControls.MessagesUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DaijinSchool.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" MinWidth="1200" Margin="10">
    <Grid>
        <Grid Name="GridGrd" Background="#15855588">
            <StackPanel>
                <TextBlock VerticalAlignment="Top" Margin="10 10 10 10" FontSize="20" Name="FIOTb" HorizontalAlignment="Left"/>
                <TextBlock TextWrapping="Wrap" Margin="10" FontSize="12" Text="{Binding MessageText}"/>
                <TextBlock HorizontalAlignment="Right" Margin="10" Text="{Binding Timestamp}"/>
            </StackPanel> 
        </Grid>
    </Grid>
</UserControl>
