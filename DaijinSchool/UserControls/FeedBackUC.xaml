<UserControl x:Class="DaijinSchool.UserControls.FeedBackUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DaijinSchool.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" MinWidth="1000"  Background="{x:Null}"  BorderBrush="{x:Null}">
    <Border Margin="10" Background="White" CornerRadius="40" BorderBrush="Black" BorderThickness="1">
        <Grid Background="{x:Null}" >
            <StackPanel Margin="30 20 30 20">
                <StackPanel>
                    <TextBlock Margin="0 0 10 0" Text="{Binding FIO}" DataContext="UserDB" FontSize="18" x:Name="FIOTb">
                    </TextBlock>
                    <TextBlock FontSize="18" Text="{Binding Date}">
                        
                    </TextBlock>
                </StackPanel>
                <TextBlock Text="{Binding CommentText}" TextWrapping="Wrap" FontSize="16">
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
