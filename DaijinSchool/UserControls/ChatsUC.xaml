        <StackPanel Orientation="Horizontal">
            <Image Name="AvatarImg" Margin="10" HorizontalAlignment="Left" Width="80" Height="80">
                <Image.Clip>
                    <EllipseGeometry Center="100,100" RadiusX="100" RadiusY="100"/>
                </Image.Clip>
            </Image>
            <TextBlock TextWrapping="Wrap" Margin="30 10 10 10" FontSize="14" Width="250" Name="FIOTb" VerticalAlignment="Center" HorizontalAlignment="Center">
                
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
