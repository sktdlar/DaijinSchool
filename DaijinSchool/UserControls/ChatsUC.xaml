             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DaijinSchool.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400" Background="White" Margin="10" BorderBrush="Black" BorderThickness="1" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
